@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="master-view-container column-layout">
    <IgbNavbar class="navbar" master-view-scope>
        <div>App Name</div>
    </IgbNavbar>
    <div class="group row-layout">
        <IgbNavDrawer Position="NavDrawerPosition.Relative" class="nav-drawer" master-view-scope>
            <div slot="mini">
                <IgbNavDrawerItem @onclick="@(e => Navigate("/"))" class="nav-drawer-item" master-view-scope>
                    <span slot="icon">
                        <span class="material-icons icon">
                            account_circle
                        </span>
                    </span>
                </IgbNavDrawerItem>
                <IgbNavDrawerItem @onclick="@(e => Navigate("/view-2"))" class="nav-drawer-item" master-view-scope>
                    <span slot="icon">
                        <span class="material-icons icon">
                            assignment_turned_in
                        </span>
                    </span>
                </IgbNavDrawerItem>
                <IgbNavDrawerItem @onclick="@(e => Navigate("/view-3"))" class="nav-drawer-item" master-view-scope>
                    <span slot="icon">
                        <span class="material-icons icon">
                            assessment
                        </span>
                    </span>
                </IgbNavDrawerItem>
            </div>
            <IgbNavDrawerItem class="nav-drawer-item" master-view-scope>
                <span slot="icon">
                    <span class="material-icons icon">
                        account_circle
                    </span>
                </span>
                <div slot="content">View 1</div>
            </IgbNavDrawerItem>
            <IgbNavDrawerItem class="nav-drawer-item" master-view-scope>
                <span slot="icon">
                    <span class="material-icons icon">
                        assignment_turned_in
                    </span>
                </span>
                <div slot="content">View 2</div>
            </IgbNavDrawerItem>
            <IgbNavDrawerItem class="nav-drawer-item" master-view-scope>
                <span slot="icon">
                    <span class="material-icons icon">
                        assessment
                    </span>
                </span>
                <div slot="content">View 3</div>
            </IgbNavDrawerItem>
        </IgbNavDrawer>
        <div class="view-container">
            @Body
        </div>
    </div>
</div>

@code {
    private void Navigate(string path)
    {
        NavigationManager.NavigateTo(path);
    }
}
